<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp">

        <TextView
            android:id="@+id/seriesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/series"
            android:textColor="@color/white_dark_tc"
            android:background="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/seriesTextView"/>

        <TextView
            android:id="@+id/shortTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="short"
            android:layout_below="@id/titleTextView"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/bacaTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baca Selengkapnya >>"
            android:textColor="@color/yellow"
            android:layout_below="@id/shortTextView"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <View
            android:id="@+id/lineView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/bacaTextview"
            android:background="@color/black"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="4dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>